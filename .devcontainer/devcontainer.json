{
  "name": "Oracle 11g Dev Container",
  "build": {
       "dockerfile": "Dockerfile"
  }, 
  "workspaceFolder": "/workspaces",
  "extensions": [
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "oracle.oracledevtools"  
  ],
  "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "oracle.oracledevtools.connections": [
            {
                "name": "XE",
                "username": "system",
                "password": "oracle",
                "connectString": "localhost:1521/XE"
            }
        ]
  },
  "postCreateCommand": "bash /opt/oracle/scripts/init.sh"
}
